<%- include("reusable/header.ejs")%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Blog</title>
</head>
<body>
  <h1>My Blog Posts</h1>

  <div style="text-align:center; margin-bottom:20px;">
    <a href="/create">âž• Create New Blog</a>
  </div>

  <div class="blog-list">
    <% if (posts.length === 0) { %>
      <p>No blog posts yet. <a href="/create">Create one</a>!</p>
    <% } else { %>
      <% posts.forEach((post, index) => { %>
        <div class="blog-card">
          <% if (post.image) { %>
            <img src="<%= post.image %>" alt="Blog Image">
          <% } %>
          <h2><%= post.title %></h2>
          <p><%= post.description %></p>

          <div class="actions">
            <form action="/delete/<%= index %>" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
